@model BookViewModel

@foreach (var book in Model.Books)
{
    <div class="card mb-3 mt-3">
        <div class="row">
            <div class="col-md-4">
                <img class="mx-auto d-block" style="height:250px" src="" alt="@book.Name" asp-append-version="true" /> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> 
                        @book.Name
                    </h5>
                    <p>@book.Description</p>
                </div>
            </div>
        </div>
    </div>
}