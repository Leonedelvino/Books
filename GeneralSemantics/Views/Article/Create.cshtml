@model Books.Models.ArticleModel


<form method="post" enctype="multipart/form-data" asp-controller="Article" asp-action="Create">
    <div class="form-group row">
        <label asp-for="Title" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DatePosted" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input type="datetime-local" asp-for="DatePosted" class="form-control" />
            <span asp-validation-for="DatePosted" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Author" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input type="text" asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Language" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input type="text" asp-for="Language" class="form-control" />
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Cover" class="col-md-2 col-form-label"></label>
        <div class="col-md-5">
            <input type="file" asp-for="Cover" class="form-control" />
            <span asp-validation-for="Cover" class="text-danger"></span>
        </div>
    </div>
</form>